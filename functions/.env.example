# AuraPix Backend Environment Variables
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# Server Configuration
PORT=3001
NODE_ENV=development
LOG_LEVEL=info

# Storage Mode: 'local' or 'firebase'
STORAGE_MODE=local

# Local Storage Paths (when STORAGE_MODE=local)
LOCAL_STORAGE_PATH=./local-data/storage
LOCAL_DATABASE_PATH=./local-data/database
LOCAL_CACHE_PATH=./local-data/cache

# Firebase Configuration (when STORAGE_MODE=firebase)
# FIREBASE_PROJECT_ID=your-project-id
# FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
# GOOGLE_APPLICATION_CREDENTIALS=./serviceAccountKey.json

# Cache Configuration
MEMORY_CACHE_MAX_SIZE_MB=100
MEMORY_CACHE_TTL_SECONDS=300
DISK_CACHE_MAX_SIZE_MB=1000
DISK_CACHE_TTL_SECONDS=3600

# Image Processing
THUMBNAIL_SMALL_SIZE=200
THUMBNAIL_MEDIUM_SIZE=800
THUMBNAIL_LARGE_SIZE=1600
JPEG_QUALITY=85
WEBP_QUALITY=80

# Authentication Mode: 'mock' or 'firebase'
AUTH_MODE=mock

# Security
UPLOAD_RATE_LIMIT_WINDOW_MS=60000
UPLOAD_RATE_LIMIT_MAX_REQUESTS=30
APP_CHECK_ENFORCE_UPLOADS=false
APP_CHECK_BYPASS_TOKENS=

# HMAC Signing Configuration
# CRITICAL: Generate a secure secret for production!
# Run: node generate-signing-secret.js
SIGNING_MASTER_SECRET=
SIGNING_KEY_EXPIRATION=3600
SIGNED_URL_EXPIRATION=600

# Instructions for generating SIGNING_MASTER_SECRET:
# 1. Run: node generate-signing-secret.js
# 2. Copy the generated 64-character hex string
# 3. Paste it as the value for SIGNING_MASTER_SECRET above
# 4. Keep this secret secure and DO NOT commit it to git