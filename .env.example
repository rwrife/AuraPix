# App runtime
VITE_APP_NAME=AuraPix
VITE_APP_ENV=development

# Backend API (can point to local emulator or hosted endpoint)
VITE_API_BASE_URL=http://localhost:8787

# Service mode: 'local' (single-user, no auth) or 'firebase' (multi-user with auth)
# When set to 'local', the app runs in single-user mode with no authentication
# When set to 'firebase', the app uses Firebase Authentication
VITE_SERVICE_MODE=local

# Optional Firebase client config (required when VITE_SERVICE_MODE=firebase)
VITE_FIREBASE_API_KEY=
VITE_FIREBASE_AUTH_DOMAIN=
VITE_FIREBASE_PROJECT_ID=
VITE_FIREBASE_STORAGE_BUCKET=
VITE_FIREBASE_MESSAGING_SENDER_ID=
VITE_FIREBASE_APP_ID=
